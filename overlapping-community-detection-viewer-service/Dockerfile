FROM learninglayers/base
MAINTAINER Robbani <robbani@dbis@rwth-aachen.de>

# Environment variables
ENV JAVA_HOME="/usr/lib/jvm/java-8-oracle"
ENV PATH $JAVA_HOME/bin:$PATH


# Install Java 8
RUN apt-get update -yq \

	# add Java 8 repository
	&& apt-get install -yq software-properties-common \
	&& add-apt-repository -y ppa:webupd8team/java \
	&& echo oracle-java8-installer shared/accepted-oracle-license-v1-1 select true | sudo /usr/bin/debconf-set-selections \

	# install Java 8
	&& apt-get update -yq \
	&& apt-get install -yq oracle-java8-installer wget \
	&& update-java-alternatives -s java-8-oracle 

# Install unzip
RUN apt-get install unzip

# Install JCE for Java 8
RUN wget --no-check-certificate --no-cookies --header "Cookie: oraclelicense=accept-securebackup-cookie" "http://download.oracle.com/otn-pub/java/jce/8/jce_policy-8.zip"
RUN unzip jce_policy-8.zip
RUN cp -r UnlimitedJCEPolicyJDK8/. $JAVA_HOME/jre/lib/security/
RUN rm -r UnlimitedJCEPolicyJDK8 && rm jce_policy-8.zip && \
 mkdir OCD

# Download the service
RUN wget -O OCD.zip https://www.dropbox.com/sh/d31xa7lj33nn495/AAC8m12icoUv2bug33zAeeRXa/OCD.zip?dl=1 \
  && unzip OCD.zip

# Give permission to the starting scripts
RUN chmod u+x OCD-Service-Unobfuscated/ocd/bin/start_derby_server.sh
RUN chmod u+x OCD-Service-Unobfuscated/bin/start_network_both_services.sh

# Start db server and also ocd service
WORKDIR "/OCD-Service-Unobfuscated/ocd/bin"
CMD ./start_derby_server.sh & cd ../.. ;  ./bin/start_network_both_services.sh

EXPOSE 8080

